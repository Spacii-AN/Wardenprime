<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Welcome Messages - WardenPrime Admin</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <link href="/style.css" rel="stylesheet">
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">
                <i class="fas fa-shield-alt me-2"></i>WardenPrime Admin
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/dashboard">
                            <i class="fas fa-tachometer-alt me-1"></i>Dashboard
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/servers">
                            <i class="fas fa-server me-1"></i>Servers
                        </a>
                    </li>
                </ul>
                <ul class="navbar-nav">
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                            <i class="fas fa-user me-1"></i><%= user.username %>#<%= user.discriminator %>
                        </a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="/logout">
                                <i class="fas fa-sign-out-alt me-1"></i>Logout
                            </a></li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container-fluid mt-4">
        <div class="row">
            <div class="col-12">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h1><i class="fas fa-door-open me-2"></i>Welcome Messages</h1>
                    <div class="btn-group">
                        <a href="/servers/<%= guildId %>" class="btn btn-outline-primary">
                            <i class="fas fa-arrow-left me-1"></i>Back to Server
                        </a>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-8">
                        <div class="card">
                            <div class="card-header">
                                <h5><i class="fas fa-edit me-2"></i>Welcome Message Configuration</h5>
                            </div>
                            <div class="card-body">
                                <form id="welcomeForm">
                                    <div class="mb-3">
                                        <div class="form-check form-switch">
                                            <input class="form-check-input" type="checkbox" id="welcomeEnabled" 
                                                   <%= welcomeMessages.enabled ? 'checked' : '' %>>
                                            <label class="form-check-label" for="welcomeEnabled">
                                                Enable Welcome Messages
                                            </label>
                                        </div>
                                    </div>

                                    <div class="mb-3">
                                        <label for="welcomeChannel" class="form-label">Welcome Channel</label>
                                        <select class="form-select" id="welcomeChannel" name="channelId">
                                            <option value="">Select a channel...</option>
                                            <!-- Channels will be loaded via AJAX -->
                                        </select>
                                    </div>

                                    <div class="mb-3">
                                        <label for="welcomeMessage" class="form-label">Welcome Message</label>
                                        <textarea class="form-control" id="welcomeMessage" name="message" rows="6" 
                                                  placeholder="Enter your welcome message..."><%= welcomeMessages.message || '' %></textarea>
                                        <div class="form-text">
                                            Available variables: {user}, {server}, {memberCount}
                                        </div>
                                    </div>

                                    <div class="mb-3">
                                        <label for="welcomeEmbed" class="form-label">Embed Settings</label>
                                        <div class="row">
                                            <div class="col-md-6">
                                                <input type="text" class="form-control" id="embedTitle" name="embedTitle" 
                                                       placeholder="Embed Title" value="<%= welcomeMessages.embedTitle || '' %>">
                                            </div>
                                            <div class="col-md-6">
                                                <input type="color" class="form-control" id="embedColor" name="embedColor" 
                                                       value="<%= welcomeMessages.embedColor || '#00ff00' %>">
                                            </div>
                                        </div>
                                    </div>

                                    <div class="mb-3">
                                        <label for="welcomeImage" class="form-label">Welcome Image URL</label>
                                        <input type="url" class="form-control" id="welcomeImage" name="imageUrl" 
                                               placeholder="https://example.com/image.png" 
                                               value="<%= welcomeMessages.imageUrl || '' %>">
                                    </div>

                                    <div class="mb-3">
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" id="welcomeDM" name="sendDM"
                                                   <%= welcomeMessages.sendDM ? 'checked' : '' %>>
                                            <label class="form-check-label" for="welcomeDM">
                                                Send Direct Message to New Member
                                            </label>
                                        </div>
                                    </div>

                                    <div class="mb-3">
                                        <label for="welcomeRole" class="form-label">Auto-Assign Role</label>
                                        <select class="form-select" id="welcomeRole" name="autoRoleId">
                                            <option value="">No auto-assign role</option>
                                            <!-- Roles will be loaded via AJAX -->
                                        </select>
                                    </div>

                                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                                        <button type="button" class="btn btn-outline-secondary" onclick="previewWelcome()">
                                            <i class="fas fa-eye me-1"></i>Preview
                                        </button>
                                        <button type="submit" class="btn btn-primary">
                                            <i class="fas fa-save me-1"></i>Save Settings
                                        </button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-4">
                        <div class="card">
                            <div class="card-header">
                                <h5><i class="fas fa-info-circle me-2"></i>Welcome Message Help</h5>
                            </div>
                            <div class="card-body">
                                <h6>Available Variables:</h6>
                                <ul class="list-unstyled">
                                    <li><code>{user}</code> - User mention</li>
                                    <li><code>{username}</code> - Username</li>
                                    <li><code>{server}</code> - Server name</li>
                                    <li><code>{memberCount}</code> - Total member count</li>
                                    <li><code>{userCount}</code> - User count (excluding bots)</li>
                                </ul>

                                <h6 class="mt-3">Example Message:</h6>
                                <div class="bg-light p-2 rounded">
                                    <small>
                                        Welcome {user} to {server}!<br>
                                        You are member #{memberCount}
                                    </small>
                                </div>

                                <h6 class="mt-3">Features:</h6>
                                <ul class="list-unstyled">
                                    <li><i class="fas fa-check text-success me-1"></i>Custom messages</li>
                                    <li><i class="fas fa-check text-success me-1"></i>Rich embeds</li>
                                    <li><i class="fas fa-check text-success me-1"></i>Auto-role assignment</li>
                                    <li><i class="fas fa-check text-success me-1"></i>Direct messages</li>
                                    <li><i class="fas fa-check text-success me-1"></i>Image support</li>
                                </ul>
                            </div>
                        </div>

                        <div class="card mt-3">
                            <div class="card-header">
                                <h5><i class="fas fa-chart-bar me-2"></i>Statistics</h5>
                            </div>
                            <div class="card-body">
                                <div class="row text-center">
                                    <div class="col-6">
                                        <h4 class="text-primary">0</h4>
                                        <small class="text-muted">Messages Sent</small>
                                    </div>
                                    <div class="col-6">
                                        <h4 class="text-success">0</h4>
                                        <small class="text-muted">Roles Assigned</small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Preview Modal -->
    <div class="modal fade" id="previewModal" tabindex="-1">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Welcome Message Preview</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div id="previewContent">
                        <!-- Preview content will be generated here -->
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Load channels and roles on page load
        document.addEventListener('DOMContentLoaded', function() {
            loadChannels();
            loadRoles();
        });

        async function loadChannels() {
            try {
                const response = await fetch(`/api/servers/<%= guildId %>/channels`);
                const data = await response.json();
                const select = document.getElementById('welcomeChannel');
                
                if (data.success && data.data) {
                    data.data.forEach(channel => {
                        const option = document.createElement('option');
                        option.value = channel.id;
                        option.textContent = `#${channel.name}`;
                        if (channel.id === '<%= welcomeMessages.channelId %>') {
                            option.selected = true;
                        }
                        select.appendChild(option);
                    });
                }
            } catch (error) {
                console.error('Error loading channels:', error);
            }
        }

        async function loadRoles() {
            try {
                const response = await fetch(`/api/servers/<%= guildId %>/roles`);
                const data = await response.json();
                const select = document.getElementById('welcomeRole');
                
                if (data.success && data.data) {
                    data.data.forEach(role => {
                        const option = document.createElement('option');
                        option.value = role.id;
                        option.textContent = role.name;
                        if (role.id === '<%= welcomeMessages.autoRoleId %>') {
                            option.selected = true;
                        }
                        select.appendChild(option);
                    });
                }
            } catch (error) {
                console.error('Error loading roles:', error);
            }
        }

        function previewWelcome() {
            const form = document.getElementById('welcomeForm');
            const formData = new FormData(form);
            
            const message = formData.get('message') || 'Welcome {user} to {server}!';
            const embedTitle = formData.get('embedTitle') || 'Welcome!';
            const embedColor = formData.get('embedColor') || '#00ff00';
            const imageUrl = formData.get('imageUrl') || '';
            
            // Replace variables with example values
            const previewMessage = message
                .replace(/{user}/g, '@TestUser')
                .replace(/{username}/g, 'TestUser')
                .replace(/{server}/g, 'Test Server')
                .replace(/{memberCount}/g, '100')
                .replace(/{userCount}/g, '95');
            
            const previewTitle = embedTitle
                .replace(/{user}/g, '@TestUser')
                .replace(/{username}/g, 'TestUser')
                .replace(/{server}/g, 'Test Server')
                .replace(/{memberCount}/g, '100')
                .replace(/{userCount}/g, '95');
            
            const previewContent = document.getElementById('previewContent');
            previewContent.innerHTML = `
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title" style="color: ${embedColor}">${previewTitle}</h5>
                        <p class="card-text">${previewMessage}</p>
                        ${imageUrl ? `<img src="${imageUrl}" class="img-fluid rounded" alt="Welcome image">` : ''}
                    </div>
                </div>
            `;
            
            new bootstrap.Modal(document.getElementById('previewModal')).show();
        }

        // Handle form submission
        document.getElementById('welcomeForm').addEventListener('submit', async function(e) {
            e.preventDefault();
            
            const formData = new FormData(this);
            const data = Object.fromEntries(formData.entries());
            data.enabled = document.getElementById('welcomeEnabled').checked;
            data.sendDM = document.getElementById('welcomeDM').checked;
            
            try {
                const response = await fetch(`/servers/<%= guildId %>/welcome`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify(data)
                });
                
                const result = await response.json();
                
                if (result.success) {
                    alert('Welcome message settings saved successfully!');
                } else {
                    alert('Failed to save welcome message settings');
                }
            } catch (error) {
                console.error('Error saving welcome message:', error);
                alert('Error saving welcome message settings');
            }
        });
    </script>
</body>
</html>
