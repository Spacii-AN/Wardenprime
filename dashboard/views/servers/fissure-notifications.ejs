<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Fissure Notifications - WardenPrime Admin</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <link href="/style.css" rel="stylesheet">
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">
                <i class="fas fa-shield-alt me-2"></i>WardenPrime Admin
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/dashboard">
                            <i class="fas fa-tachometer-alt me-1"></i>Dashboard
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/servers">
                            <i class="fas fa-server me-1"></i>Servers
                        </a>
                    </li>
                </ul>
                <ul class="navbar-nav">
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                            <i class="fas fa-user me-1"></i><%= user.username %>#<%= user.discriminator %>
                        </a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="/logout">
                                <i class="fas fa-sign-out-alt me-1"></i>Logout
                            </a></li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container-fluid mt-4">
        <div class="row">
            <div class="col-12">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h1><i class="fas fa-broadcast-tower me-2"></i>Fissure Notifications</h1>
                    <div class="btn-group">
                        <a href="/servers/<%= guildId %>" class="btn btn-outline-primary">
                            <i class="fas fa-arrow-left me-1"></i>Back to Server
                        </a>
                        <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#createNotificationModal">
                            <i class="fas fa-plus me-1"></i>Create Notification
                        </button>
                    </div>
                </div>

                <!-- Notification Types Tabs -->
                <ul class="nav nav-tabs mb-4" id="notificationTabs" role="tablist">
                    <li class="nav-item" role="presentation">
                        <button class="nav-link active" id="general-tab" data-bs-toggle="tab" data-bs-target="#general" type="button" role="tab">
                            <i class="fas fa-list me-1"></i>General Notifications
                        </button>
                    </li>
                    <li class="nav-item" role="presentation">
                        <button class="nav-link" id="specific-tab" data-bs-toggle="tab" data-bs-target="#specific" type="button" role="tab">
                            <i class="fas fa-crosshairs me-1"></i>Specific Nodes
                        </button>
                    </li>
                </ul>

                <div class="tab-content" id="notificationTabContent">
                    <!-- General Notifications -->
                    <div class="tab-pane fade show active" id="general" role="tabpanel">
                        <div class="row">
                            <div class="col-12">
                                <div class="card">
                                    <div class="card-header">
                                        <h5><i class="fas fa-broadcast-tower me-2"></i>General Fissure Notifications</h5>
                                    </div>
                                    <div class="card-body">
                                        <% if (fissureNotifications.filter(n => !n.node_name).length > 0) { %>
                                            <div class="table-responsive">
                                                <table class="table table-hover">
                                                    <thead>
                                                        <tr>
                                                            <th>Mission Type</th>
                                                            <th>Channel</th>
                                                            <th>Steel Path</th>
                                                            <th>Role Ping</th>
                                                            <th>Status</th>
                                                            <th>Actions</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        <% fissureNotifications.filter(n => !n.node_name).forEach(notification => { %>
                                                            <tr>
                                                                <td>
                                                                    <span class="badge bg-primary"><%= notification.mission_type %></span>
                                                                </td>
                                                                <td>
                                                                    <code>#<%= notification.channel_name || 'Unknown' %></code>
                                                                </td>
                                                                <td>
                                                                    <span class="badge bg-<%= notification.steel_path ? 'warning' : 'info' %>">
                                                                        <%= notification.steel_path ? 'Steel Path' : 'Normal' %>
                                                                    </span>
                                                                </td>
                                                                <td>
                                                                    <%= notification.role_id ? `<span class="badge bg-success">@${notification.role_name || 'Role'}</span>` : '<span class="text-muted">None</span>' %>
                                                                </td>
                                                                <td>
                                                                    <span class="badge bg-success">Active</span>
                                                                </td>
                                                                <td>
                                                                    <div class="btn-group btn-group-sm">
                                                                        <button class="btn btn-outline-danger" onclick="deleteNotification('<%= notification.id %>')">
                                                                            <i class="fas fa-trash"></i>
                                                                        </button>
                                                                    </div>
                                                                </td>
                                                            </tr>
                                                        <% }); %>
                                                    </tbody>
                                                </table>
                                            </div>
                                        <% } else { %>
                                            <div class="text-center py-4">
                                                <i class="fas fa-broadcast-tower fa-3x text-muted mb-3"></i>
                                                <h5>No General Notifications</h5>
                                                <p class="text-muted">Create notifications for specific mission types.</p>
                                                <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#createNotificationModal">
                                                    <i class="fas fa-plus me-1"></i>Create Notification
                                                </button>
                                            </div>
                                        <% } %>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Specific Node Notifications -->
                    <div class="tab-pane fade" id="specific" role="tabpanel">
                        <div class="row">
                            <div class="col-12">
                                <div class="card">
                                    <div class="card-header">
                                        <h5><i class="fas fa-crosshairs me-2"></i>Node-Specific Notifications</h5>
                                    </div>
                                    <div class="card-body">
                                        <% if (fissureNotifications.filter(n => n.node_name).length > 0) { %>
                                            <div class="table-responsive">
                                                <table class="table table-hover">
                                                    <thead>
                                                        <tr>
                                                            <th>Mission Type</th>
                                                            <th>Node</th>
                                                            <th>Channel</th>
                                                            <th>Steel Path</th>
                                                            <th>Role Ping</th>
                                                            <th>Status</th>
                                                            <th>Actions</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        <% fissureNotifications.filter(n => n.node_name).forEach(notification => { %>
                                                            <tr>
                                                                <td>
                                                                    <span class="badge bg-primary"><%= notification.mission_type %></span>
                                                                </td>
                                                                <td>
                                                                    <span class="badge bg-info"><%= notification.node_name %></span>
                                                                </td>
                                                                <td>
                                                                    <code>#<%= notification.channel_name || 'Unknown' %></code>
                                                                </td>
                                                                <td>
                                                                    <span class="badge bg-<%= notification.steel_path ? 'warning' : 'info' %>">
                                                                        <%= notification.steel_path ? 'Steel Path' : 'Normal' %>
                                                                    </span>
                                                                </td>
                                                                <td>
                                                                    <%= notification.role_id ? `<span class="badge bg-success">@${notification.role_name || 'Role'}</span>` : '<span class="text-muted">None</span>' %>
                                                                </td>
                                                                <td>
                                                                    <span class="badge bg-success">Active</span>
                                                                </td>
                                                                <td>
                                                                    <div class="btn-group btn-group-sm">
                                                                        <button class="btn btn-outline-danger" onclick="deleteNotification('<%= notification.id %>')">
                                                                            <i class="fas fa-trash"></i>
                                                                        </button>
                                                                    </div>
                                                                </td>
                                                            </tr>
                                                        <% }); %>
                                                    </tbody>
                                                </table>
                                            </div>
                                        <% } else { %>
                                            <div class="text-center py-4">
                                                <i class="fas fa-crosshairs fa-3x text-muted mb-3"></i>
                                                <h5>No Node-Specific Notifications</h5>
                                                <p class="text-muted">Create notifications for specific nodes and mission types.</p>
                                                <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#createNotificationModal">
                                                    <i class="fas fa-plus me-1"></i>Create Notification
                                                </button>
                                            </div>
                                        <% } %>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Create Notification Modal -->
    <div class="modal fade" id="createNotificationModal" tabindex="-1">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Create Fissure Notification</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <form id="notificationForm">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label for="notificationType" class="form-label">Notification Type</label>
                                    <select class="form-select" id="notificationType" name="type" required>
                                        <option value="general">General Mission Type</option>
                                        <option value="specific">Specific Node</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label for="notificationChannel" class="form-label">Channel</label>
                                    <select class="form-select" id="notificationChannel" name="channelId" required>
                                        <option value="">Select a channel...</option>
                                        <!-- Channels will be loaded via AJAX -->
                                    </select>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label for="notificationMission" class="form-label">Mission Type</label>
                                    <select class="form-select" id="notificationMission" name="mission_type" required>
                                        <option value="">Select mission type...</option>
                                        <option value="Survival">Survival</option>
                                        <option value="Defense">Defense</option>
                                        <option value="Exterminate">Exterminate</option>
                                        <option value="Capture">Capture</option>
                                        <option value="Rescue">Rescue</option>
                                        <option value="Sabotage">Sabotage</option>
                                        <option value="Mobile Defense">Mobile Defense</option>
                                        <option value="Spy">Spy</option>
                                        <option value="Interception">Interception</option>
                                        <option value="Excavation">Excavation</option>
                                        <option value="Disruption">Disruption</option>
                                        <option value="Alchemy">Alchemy</option>
                                        <option value="Void Cascade">Void Cascade</option>
                                        <option value="Void Flood">Void Flood</option>
                                        <option value="Void Armageddon">Void Armageddon</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-6" id="nodeSelection" style="display: none;">
                                <div class="mb-3">
                                    <label for="notificationNode" class="form-label">Specific Node</label>
                                    <input type="text" class="form-control" id="notificationNode" name="node_name" 
                                           placeholder="Enter node name (e.g., Kappa, Hydron)">
                                    <div class="form-text">Leave empty for all nodes of this mission type</div>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <div class="form-check form-switch">
                                        <input class="form-check-input" type="checkbox" id="notificationSteelPath" name="steel_path">
                                        <label class="form-check-label" for="notificationSteelPath">
                                            Steel Path Only
                                        </label>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label for="notificationRole" class="form-label">Role to Ping (Optional)</label>
                                    <select class="form-select" id="notificationRole" name="role_id">
                                        <option value="">No role ping</option>
                                        <!-- Roles will be loaded via AJAX -->
                                    </select>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-primary" onclick="createNotification()">Create Notification</button>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Load channels and roles on page load
        document.addEventListener('DOMContentLoaded', function() {
            loadChannels();
            loadRoles();
        });

        // Handle notification type change
        document.getElementById('notificationType').addEventListener('change', function() {
            const nodeSelection = document.getElementById('nodeSelection');
            if (this.value === 'specific') {
                nodeSelection.style.display = 'block';
            } else {
                nodeSelection.style.display = 'none';
            }
        });

        async function loadChannels() {
            try {
                const response = await fetch(`/api/servers/<%= guildId %>/channels`);
                const data = await response.json();
                const select = document.getElementById('notificationChannel');
                
                if (data.success && data.data) {
                    data.data.forEach(channel => {
                        if (channel.type === 0) { // Text channels only
                            const option = document.createElement('option');
                            option.value = channel.id;
                            option.textContent = `#${channel.name}`;
                            select.appendChild(option);
                        }
                    });
                }
            } catch (error) {
                console.error('Error loading channels:', error);
            }
        }

        async function loadRoles() {
            try {
                const response = await fetch(`/api/servers/<%= guildId %>/roles`);
                const data = await response.json();
                const select = document.getElementById('notificationRole');
                
                if (data.success && data.data) {
                    data.data.forEach(role => {
                        const option = document.createElement('option');
                        option.value = role.id;
                        option.textContent = role.name;
                        select.appendChild(option);
                    });
                }
            } catch (error) {
                console.error('Error loading roles:', error);
            }
        }

        async function createNotification() {
            const form = document.getElementById('notificationForm');
            const formData = new FormData(form);
            const data = Object.fromEntries(formData.entries());
            data.steel_path = document.getElementById('notificationSteelPath').checked;
            
            // Remove node_name if not specific type
            if (data.type !== 'specific') {
                delete data.node_name;
            }
            
            try {
                const response = await fetch(`/servers/<%= guildId %>/fissure-notifications`, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(data)
                });
                
                const result = await response.json();
                
                if (result.success) {
                    alert('Fissure notification created successfully!');
                    location.reload();
                } else {
                    alert('Failed to create fissure notification');
                }
            } catch (error) {
                console.error('Error creating notification:', error);
                alert('Error creating fissure notification');
            }
        }

        async function deleteNotification(notificationId) {
            if (confirm('Are you sure you want to delete this notification?')) {
                try {
                    const response = await fetch(`/servers/<%= guildId %>/fissure-notifications/${notificationId}`, {
                        method: 'DELETE'
                    });
                    
                    const result = await response.json();
                    
                    if (result.success) {
                        alert('Notification deleted successfully!');
                        location.reload();
                    } else {
                        alert('Failed to delete notification');
                    }
                } catch (error) {
                    console.error('Error deleting notification:', error);
                    alert('Error deleting notification');
                }
            }
        }
    </script>
</body>
</html>
