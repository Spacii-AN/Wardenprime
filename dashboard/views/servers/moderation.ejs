    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        let currentUserId = null;

        // Load roles on page load
        document.addEventListener('DOMContentLoaded', function() {
            loadRoles();
        });

        async function loadRoles() {
            try {
                const response = await fetch(`/api/servers/<%= guildId %>/roles`);
                const data = await response.json();
                const select = document.getElementById('roleFilter');
                
                if (data.success && data.data) {
                    data.data.forEach(role => {
                        const option = document.createElement('option');
                        option.value = role.id;
                        option.textContent = role.name;
                        select.appendChild(option);
                    });
                }
            } catch (error) {
                console.error('Error loading roles:', error);
            }
        }

        function filterUsers() {
            const searchTerm = document.getElementById('userSearch').value.toLowerCase();
            const roleFilter = document.getElementById('roleFilter').value;
            const rows = document.querySelectorAll('#usersTable tbody tr');

            rows.forEach(row => {
                const userText = row.textContent.toLowerCase();
                const hasRole = roleFilter === '' || row.textContent.includes(roleFilter);
                const matchesSearch = searchTerm === '' || userText.includes(searchTerm);

                if (hasRole && matchesSearch) {
                    row.style.display = '';
                } else {
                    row.style.display = 'none';
                }
            });
        }

        function viewUserDetails(userId) {
            currentUserId = userId;
            // This would load user details from the server
            document.getElementById('userDetailsContent').innerHTML = `
                <div class="row">
                    <div class="col-md-6">
                        <h6>User Information</h6>
                        <p><strong>ID:</strong> ${userId}</p>
                        <p><strong>Joined:</strong> Jan 1, 2024</p>
                        <p><strong>Last Active:</strong> 2 hours ago</p>
                    </div>
                    <div class="col-md-6">
                        <h6>Statistics</h6>
                        <p><strong>Warnings:</strong> 0</p>
                        <p><strong>Commands Used:</strong> 45</p>
                        <p><strong>Messages:</strong> 1,234</p>
                    </div>
                </div>
            `;
            new bootstrap.Modal(document.getElementById('userDetailsModal')).show();
        }

        function warnUser(userId) {
            currentUserId = userId;
            new bootstrap.Modal(document.getElementById('warningModal')).show();
        }

        function kickUser(userId) {
            if (confirm('Are you sure you want to kick this user?')) {
                // This would kick the user
                alert('User kicked successfully!');
            }
        }

        function banUser(userId) {
            if (confirm('Are you sure you want to ban this user? This action cannot be undone.')) {
                // This would ban the user
                alert('User banned successfully!');
            }
        }

        function submitWarning() {
            const reason = document.getElementById('warningReason').value;
            const sendDM = document.getElementById('sendDM').checked;

            if (!reason.trim()) {
                alert('Please enter a reason for the warning.');
                return;
            }

            // This would submit the warning to the server
            alert('Warning issued successfully!');
            bootstrap.Modal.getInstance(document.getElementById('warningModal')).hide();
        }

        function viewWarnings(userId) {
            // This would show the user's warning history
            alert('Warning history would be displayed here');
        }

        function removeWarning(userId) {
            if (confirm('Are you sure you want to remove the latest warning for this user?')) {
                // This would remove the warning
                alert('Warning removed successfully!');
            }
        }
    </script>
