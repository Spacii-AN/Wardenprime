<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Giveaway Management - WardenPrime Admin</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <link href="/style.css" rel="stylesheet">
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">
                <i class="fas fa-shield-alt me-2"></i>WardenPrime Admin
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/dashboard">
                            <i class="fas fa-tachometer-alt me-1"></i>Dashboard
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/servers">
                            <i class="fas fa-server me-1"></i>Servers
                        </a>
                    </li>
                </ul>
                <ul class="navbar-nav">
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                            <i class="fas fa-user me-1"></i><%= user.username %>#<%= user.discriminator %>
                        </a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="/logout">
                                <i class="fas fa-sign-out-alt me-1"></i>Logout
                            </a></li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container-fluid mt-4">
        <div class="row">
            <div class="col-12">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h1><i class="fas fa-gift me-2"></i>Giveaway Management</h1>
                    <div class="btn-group">
                        <a href="/servers/<%= guildId %>" class="btn btn-outline-primary">
                            <i class="fas fa-arrow-left me-1"></i>Back to Server
                        </a>
                        <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#createGiveawayModal">
                            <i class="fas fa-plus me-1"></i>Create Giveaway
                        </button>
                    </div>
                </div>

                <!-- Giveaway Tabs -->
                <ul class="nav nav-tabs mb-4" id="giveawayTabs" role="tablist">
                    <li class="nav-item" role="presentation">
                        <button class="nav-link active" id="active-tab" data-bs-toggle="tab" data-bs-target="#active" type="button" role="tab">
                            <i class="fas fa-play me-1"></i>Active (<%= giveaways.filter(g => !g.ended).length %>)
                        </button>
                    </li>
                    <li class="nav-item" role="presentation">
                        <button class="nav-link" id="ended-tab" data-bs-toggle="tab" data-bs-target="#ended" type="button" role="tab">
                            <i class="fas fa-stop me-1"></i>Ended (<%= giveaways.filter(g => g.ended).length %>)
                        </button>
                    </li>
                </ul>

                <div class="tab-content" id="giveawayTabContent">
                    <!-- Active Giveaways -->
                    <div class="tab-pane fade show active" id="active" role="tabpanel">
                        <div class="row">
                            <% if (giveaways.filter(g => !g.ended).length > 0) { %>
                                <% giveaways.filter(g => !g.ended).forEach(giveaway => { %>
                                    <div class="col-md-6 col-lg-4 mb-4">
                                        <div class="card">
                                            <div class="card-header d-flex justify-content-between align-items-center">
                                                <h6 class="mb-0"><i class="fas fa-gift me-1"></i><%= giveaway.prize %></h6>
                                                <span class="badge bg-success">Active</span>
                                            </div>
                                            <div class="card-body">
                                                <% if (giveaway.description) { %>
                                                    <p class="card-text"><%= giveaway.description %></p>
                                                <% } %>
                                                
                                                <div class="row text-center mb-3">
                                                    <div class="col-4">
                                                        <h6 class="text-primary"><%= giveaway.entries_count || 0 %></h6>
                                                        <small class="text-muted">Entries</small>
                                                    </div>
                                                    <div class="col-4">
                                                        <h6 class="text-success"><%= giveaway.winners_count %></h6>
                                                        <small class="text-muted">Winners</small>
                                                    </div>
                                                    <div class="col-4">
                                                        <h6 class="text-warning"><%= Math.max(0, Math.ceil((new Date(giveaway.ends_at) - new Date()) / (1000 * 60 * 60))) %></h6>
                                                        <small class="text-muted">Hours Left</small>
                                                    </div>
                                                </div>

                                                <div class="d-grid gap-2">
                                                    <button class="btn btn-warning btn-sm" onclick="endGiveaway('<%= giveaway.id %>')">
                                                        <i class="fas fa-stop me-1"></i>End Now
                                                    </button>
                                                    <button class="btn btn-danger btn-sm" onclick="deleteGiveaway('<%= giveaway.id %>')">
                                                        <i class="fas fa-trash me-1"></i>Delete
                                                    </button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                <% }); %>
                            <% } else { %>
                                <div class="col-12">
                                    <div class="text-center py-4">
                                        <i class="fas fa-gift fa-3x text-muted mb-3"></i>
                                        <h5>No Active Giveaways</h5>
                                        <p class="text-muted">Create a new giveaway to get started.</p>
                                        <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#createGiveawayModal">
                                            <i class="fas fa-plus me-1"></i>Create Giveaway
                                        </button>
                                    </div>
                                </div>
                            <% } %>
                        </div>
                    </div>

                    <!-- Ended Giveaways -->
                    <div class="tab-pane fade" id="ended" role="tabpanel">
                        <div class="row">
                            <% if (giveaways.filter(g => g.ended).length > 0) { %>
                                <% giveaways.filter(g => g.ended).forEach(giveaway => { %>
                                    <div class="col-md-6 col-lg-4 mb-4">
                                        <div class="card">
                                            <div class="card-header d-flex justify-content-between align-items-center">
                                                <h6 class="mb-0"><i class="fas fa-gift me-1"></i><%= giveaway.prize %></h6>
                                                <span class="badge bg-secondary">Ended</span>
                                            </div>
                                            <div class="card-body">
                                                <% if (giveaway.description) { %>
                                                    <p class="card-text"><%= giveaway.description %></p>
                                                <% } %>
                                                
                                                <div class="row text-center mb-3">
                                                    <div class="col-4">
                                                        <h6 class="text-primary"><%= giveaway.entries_count || 0 %></h6>
                                                        <small class="text-muted">Entries</small>
                                                    </div>
                                                    <div class="col-4">
                                                        <h6 class="text-success"><%= giveaway.winners_count %></h6>
                                                        <small class="text-muted">Winners</small>
                                                    </div>
                                                    <div class="col-4">
                                                        <h6 class="text-info"><%= new Date(giveaway.ended_at).toLocaleDateString() %></h6>
                                                        <small class="text-muted">Ended</small>
                                                    </div>
                                                </div>

                                                <% if (giveaway.winners && giveaway.winners.length > 0) { %>
                                                    <div class="mb-3">
                                                        <h6>Winners:</h6>
                                                        <div class="d-flex flex-wrap gap-1">
                                                            <% giveaway.winners.forEach(winnerId => { %>
                                                                <span class="badge bg-success">@<%= winnerId %></span>
                                                            <% }); %>
                                                        </div>
                                                    </div>
                                                <% } %>

                                                <div class="d-grid gap-2">
                                                    <button class="btn btn-info btn-sm" onclick="rerollGiveaway('<%= giveaway.id %>')">
                                                        <i class="fas fa-redo me-1"></i>Reroll
                                                    </button>
                                                    <button class="btn btn-danger btn-sm" onclick="deleteGiveaway('<%= giveaway.id %>')">
                                                        <i class="fas fa-trash me-1"></i>Delete
                                                    </button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                <% }); %>
                            <% } else { %>
                                <div class="col-12">
                                    <div class="text-center py-4">
                                        <i class="fas fa-history fa-3x text-muted mb-3"></i>
                                        <h5>No Ended Giveaways</h5>
                                        <p class="text-muted">Ended giveaways will appear here.</p>
                                    </div>
                                </div>
                            <% } %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Create Giveaway Modal -->
    <div class="modal fade" id="createGiveawayModal" tabindex="-1">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Create Giveaway</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <form id="giveawayForm">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label for="giveawayPrize" class="form-label">Prize</label>
                                    <input type="text" class="form-control" id="giveawayPrize" name="prize" required>
                                    <div class="form-text">What are you giving away?</div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label for="giveawayWinners" class="form-label">Number of Winners</label>
                                    <input type="number" class="form-control" id="giveawayWinners" name="winners_count" value="1" min="1" max="20" required>
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label for="giveawayDescription" class="form-label">Description</label>
                            <textarea class="form-control" id="giveawayDescription" name="description" rows="3" 
                                      placeholder="Optional description of the giveaway..."></textarea>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label for="giveawayDuration" class="form-label">Duration</label>
                                    <select class="form-select" id="giveawayDuration" name="duration" required>
                                        <option value="1h">1 Hour</option>
                                        <option value="6h">6 Hours</option>
                                        <option value="12h">12 Hours</option>
                                        <option value="1d">1 Day</option>
                                        <option value="3d">3 Days</option>
                                        <option value="1w">1 Week</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label for="giveawayChannel" class="form-label">Channel</label>
                                    <select class="form-select" id="giveawayChannel" name="channelId" required>
                                        <option value="">Select a channel...</option>
                                        <!-- Channels will be loaded via AJAX -->
                                    </select>
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label for="giveawayRequirement" class="form-label">Requirements (Optional)</label>
                            <input type="text" class="form-control" id="giveawayRequirement" name="requirement" 
                                   placeholder="e.g., Must have specific role, account age, etc.">
                        </div>

                        <div class="mb-3">
                            <label for="giveawayHost" class="form-label">Host (Optional)</label>
                            <select class="form-select" id="giveawayHost" name="host_id">
                                <option value="">No specific host</option>
                                <!-- Members will be loaded via AJAX -->
                            </select>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-primary" onclick="createGiveaway()">Create Giveaway</button>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Load channels and members on page load
        document.addEventListener('DOMContentLoaded', function() {
            loadChannels();
            loadMembers();
        });

        async function loadChannels() {
            try {
                const response = await fetch(`/api/servers/<%= guildId %>/channels`);
                const data = await response.json();
                const select = document.getElementById('giveawayChannel');
                
                if (data.success && data.data) {
                    data.data.forEach(channel => {
                        if (channel.type === 0) { // Text channels only
                            const option = document.createElement('option');
                            option.value = channel.id;
                            option.textContent = `#${channel.name}`;
                            select.appendChild(option);
                        }
                    });
                }
            } catch (error) {
                console.error('Error loading channels:', error);
            }
        }

        async function loadMembers() {
            try {
                const response = await fetch(`/api/servers/<%= guildId %>/members`);
                const data = await response.json();
                const select = document.getElementById('giveawayHost');
                
                if (data.success && data.data) {
                    data.data.forEach(member => {
                        const option = document.createElement('option');
                        option.value = member.id;
                        option.textContent = member.username;
                        select.appendChild(option);
                    });
                }
            } catch (error) {
                console.error('Error loading members:', error);
            }
        }

        async function createGiveaway() {
            const form = document.getElementById('giveawayForm');
            const formData = new FormData(form);
            const data = Object.fromEntries(formData.entries());
            
            try {
                const response = await fetch(`/servers/<%= guildId %>/giveaways`, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(data)
                });
                
                const result = await response.json();
                
                if (result.success) {
                    alert('Giveaway created successfully!');
                    location.reload();
                } else {
                    alert('Failed to create giveaway');
                }
            } catch (error) {
                console.error('Error creating giveaway:', error);
                alert('Error creating giveaway');
            }
        }

        async function endGiveaway(giveawayId) {
            if (confirm('Are you sure you want to end this giveaway?')) {
                try {
                    const response = await fetch(`/servers/<%= guildId %>/giveaways/${giveawayId}/end`, {
                        method: 'POST'
                    });
                    
                    const result = await response.json();
                    
                    if (result.success) {
                        alert('Giveaway ended successfully!');
                        location.reload();
                    } else {
                        alert('Failed to end giveaway');
                    }
                } catch (error) {
                    console.error('Error ending giveaway:', error);
                    alert('Error ending giveaway');
                }
            }
        }

        async function rerollGiveaway(giveawayId) {
            if (confirm('Are you sure you want to reroll this giveaway? This will select new winners.')) {
                try {
                    const response = await fetch(`/servers/<%= guildId %>/giveaways/${giveawayId}/reroll`, {
                        method: 'POST'
                    });
                    
                    const result = await response.json();
                    
                    if (result.success) {
                        alert('Giveaway rerolled successfully!');
                        location.reload();
                    } else {
                        alert('Failed to reroll giveaway');
                    }
                } catch (error) {
                    console.error('Error rerolling giveaway:', error);
                    alert('Error rerolling giveaway');
                }
            }
        }

        async function deleteGiveaway(giveawayId) {
            if (confirm('Are you sure you want to delete this giveaway? This action cannot be undone.')) {
                try {
                    const response = await fetch(`/servers/<%= guildId %>/giveaways/${giveawayId}`, {
                        method: 'DELETE'
                    });
                    
                    const result = await response.json();
                    
                    if (result.success) {
                        alert('Giveaway deleted successfully!');
                        location.reload();
                    } else {
                        alert('Failed to delete giveaway');
                    }
                } catch (error) {
                    console.error('Error deleting giveaway:', error);
                    alert('Error deleting giveaway');
                }
            }
        }
    </script>
</body>
</html>
